<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>spring-rest-demo</display-name>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <el-ignored>false</el-ignored>
        </jsp-property-group>
    </jsp-config>
    <servlet>
        <servlet-name>Products</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Categories</servlet-name>
        <jsp-file>/categories.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Vendors</servlet-name>
        <jsp-file>/vendors.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Properties</servlet-name>
        <jsp-file>/properties.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Resources</servlet-name>
        <jsp-file>/_res.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Menu</servlet-name>
        <jsp-file>/_menu.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AddCategory</servlet-name>
        <jsp-file>/adding/add_category.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AddProduct</servlet-name>
        <jsp-file>/adding/add_product.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AddProperty</servlet-name>
        <jsp-file>/adding/add_property.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AddVendor</servlet-name>
        <jsp-file>/adding/add_vendor.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>UpdateCategory</servlet-name>
        <jsp-file>/updating/update_category.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>UpdateProduct</servlet-name>
        <jsp-file>/updating/update_product.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>UpdateProperty</servlet-name>
        <jsp-file>/updating/update_property.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>UpdateVendor</servlet-name>
        <jsp-file>/updating/update_vendor.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ProductInfo</servlet-name>
        <jsp-file>/product.jsp</jsp-file>
    </servlet>
    <!--mapping-->
    <servlet-mapping>
        <servlet-name>Products</servlet-name>
        <url-pattern>/ProductsList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Categories</servlet-name>
        <url-pattern>/CategoriesList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Vendors</servlet-name>
        <url-pattern>/VendorsList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Properties</servlet-name>
        <url-pattern>/PropertiesList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Resources</servlet-name>
        <url-pattern>/res</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Menu</servlet-name>
        <url-pattern>/_menu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCategory</servlet-name>
        <url-pattern>/add_category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProduct</servlet-name>
        <url-pattern>/add_product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProperty</servlet-name>
        <url-pattern>/add_property</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddVendor</servlet-name>
        <url-pattern>/add_vendor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCategory</servlet-name>
        <url-pattern>/update_category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateProduct</servlet-name>
        <url-pattern>/update_product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateProperty</servlet-name>
        <url-pattern>/update_property</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateVendor</servlet-name>
        <url-pattern>/update_vendor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductInfo</servlet-name>
        <url-pattern>/product_info</url-pattern>
    </servlet-mapping>
</web-app>